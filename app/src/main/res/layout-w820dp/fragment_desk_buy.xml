<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="528dp"
        android:layout_height="440dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60dp"
        android:background="@color/bg_keyboard"
        android:orientation="vertical"
        android:padding="28dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购买说明"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_desk_help" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="578dp"
        android:layout_height="440dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:background="@color/bg_keyboard"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="530dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_keyboard"
            android:enabled="false"
            android:hint="输入购买商品的货道号"
            android:maxLength="10"
            android:padding="20dp"
            android:singleLine="true"
            android:textColor="@color/text_number"
            android:textColorHint="@color/text_detail"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_clear"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="清空"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_0"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_keyboard"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/text_number"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
